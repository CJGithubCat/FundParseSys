<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zsh.labouCapital.dao.FundSummaryMapper">
	
	<select id="getFundSummaryByCode" parameterType="String" resultType="com.zsh.labouCapital.entity.FundSummary">
		SELECT * 
		FROM t_fund_summary tfs 
		WHERE tfs.fund_code = #{fundCode}
	</select>
	
	<select id="queryAllFundSummary"  resultType="com.zsh.labouCapital.entity.FundSummary">
		SELECT * 
		FROM t_fund_summary tfs		
	</select>
	
	<select id="queryFundSummaryByEample"  resultType="com.zsh.labouCapital.entity.FundSummary" parameterType="com.zsh.labouCapital.entity.FundSummary">
		SELECT * 
		FROM t_fund_summary tfs
		where 1=1
		<if test='fundCode != null'>
			and tfs.fund_code = #{fundCode}
		</if>	
	</select>
	
	<select id="queryFundSummaryNoHsitory"  resultType="com.zsh.labouCapital.entity.FundSummary">
		SELECT * FROM t_fund_summary tfs
		WHERE tfs.fund_code NOT IN(
			SELECT DISTINCT tnh.fund_code FROM t_net_worth_history tnh
		)
	</select>
	
</mapper>